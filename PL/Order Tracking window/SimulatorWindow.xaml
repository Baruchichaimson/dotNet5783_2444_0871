<Window x:Class="PL.Order_Tracking_window.SimulatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Order_Tracking_window"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Icon="\images\icon.png"
        Title="OrderTracking" Height="450" Width="800">
    <Grid Name="ProductGrid" DataContext="{Binding MyProccessDetails}">
        <Grid.Background>
            <ImageBrush TileMode="None" Stretch="UniformToFill" ImageSource="\images\add-product.jpg"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions >
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto" MinHeight="0"/>
        </Grid.RowDefinitions>
        <Grid Name="Up1Grid" Height="auto" Grid.Row="0" Width="auto" Grid.ColumnSpan="5">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF49340D" Offset="1"/>
                    <GradientStop Color="#FF7A5000" Offset="0"/>
                    <GradientStop Color="#FF3E2609"  Offset="0.5"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions >
            <Label x:Name="label3" Content="ORDER TRACKING" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Width="270" Background="{x:Null}" FontSize="30" Grid.ColumnSpan="3" FontFamily="Aharoni" FontWeight="Bold" Foreground="#FFD9D9D9"/>
        </Grid>
        <TextBox Text="{Binding CurrentTreatTime}" Grid.Column="1" Grid.Row="2" Height="50" Width="150" VerticalAlignment="Bottom" HorizontalAlignment="Left" BorderThickness="5" Background="#FF733C10" BorderBrush="#FF351E0C" IsEnabled="False"/>
        <TextBox Text="{Binding CurrentStatus}" Grid.Column="1" Grid.Row="2" Height="50" Width="150" VerticalAlignment="Top" HorizontalAlignment="Left" BorderThickness="5" Background="#FF733C10" BorderBrush="#FF351E0C" IsEnabled="False"/>
        <TextBox Text="{Binding EstimatedTreatTime}" Grid.Column="3" Grid.Row="2" Height="50" Width="150" VerticalAlignment="Bottom" HorizontalAlignment="Left" BorderThickness="5" Background="#FF733C10" BorderBrush="#FF351E0C" IsEnabled="False"/>
        <TextBox Text="{Binding NextStatus}" Grid.Column="3" Grid.Row="2" Height="50" Width="150" VerticalAlignment="Top" HorizontalAlignment="Left" BorderThickness="5" Background="#FF733C10" BorderBrush="#FF351E0C" IsEnabled="False"/>
        <TextBox Text="{Binding MyClock, RelativeSource={RelativeSource AncestorType=Window}}" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" Height="70" Width="280" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40" BorderThickness="10" Background="#FF733C10" BorderBrush="#FF351E0C" IsEnabled="False"/>
        <TextBox Text ="{Binding id}" Grid.Column="4" Grid.Row="3" Height="50" Width="150" VerticalAlignment="Top" HorizontalAlignment="Left" BorderThickness="5" Background="#FF733C10" BorderBrush="#FF351E0C" IsEnabled="False"/>

        <Button Grid.Column="0" Content="STOP" Grid.Row="3" Height="50" VerticalAlignment="Center" HorizontalAlignment="Center" Width="120" FontSize="30" BorderThickness="5" BorderBrush="#FF77460A" Background="#7F9D9527" FontWeight="Bold" FontStyle="Italic" Click="Stop_Click"/>
        <Label  Content="Time:" Grid.Row="1" Grid.Column="0" FontSize="60" Grid.ColumnSpan="2" HorizontalAlignment="Left" FontWeight="Bold" VerticalAlignment="Center"/>
        <Label  Content="Current Status:" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="20" FontWeight="Bold" Foreground="White"/>
        <Label  Content="Next Status:" Grid.Column="2" Grid.Row="2"  VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="20" FontWeight="Bold" Foreground="White"/>
        <Label  Content="first date:" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="0" FontSize="20" FontWeight="Bold" Foreground="White" VerticalAlignment="Bottom"/>
        <Label  Content="last date:" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="2" FontSize="20" FontWeight="Bold" Foreground="White" VerticalAlignment="Bottom"/>
        
        <ProgressBar Value="{Binding MyProgressBarValue, RelativeSource={RelativeSource AncestorType=Window}}" Grid.Row="3" Grid.ColumnSpan="3" Grid.Column="1"  VerticalAlignment="Center" HorizontalAlignment="Center" Background="#FF733C10" BorderBrush="#FF77460A" Height="25" Width="550"/>
        <Image  Source="\images\Logo.png" HorizontalAlignment="Center" Height="160" Grid.Column="4" Grid.Row="1" Grid.RowSpan="2" VerticalAlignment="Top" Width="160" Stretch="Fill" Cursor="No" Margin="0,17,0,0" >
            <Image.OpacityMask>
                <RadialGradientBrush GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="0.65" RadiusY="0.65">
                    <GradientStop Color="#ffffffff" Offset="0.5" />
                    <GradientStop Color="#00ffffff" Offset="0.8" />
                </RadialGradientBrush>
            </Image.OpacityMask>
        </Image>
    </Grid>
</Window>